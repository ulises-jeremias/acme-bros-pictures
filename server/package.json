{
  "name": "acme-bros-pictures-api",
  "version": "1.0.0",
  "description": "REST API using NodeJS and Koa2, Typescript. TypeORM with class-validator, SQL CRUD. Docker.",
  "main": "dist/index.js",
  "readmeFilename": "README.md",
  "scripts": {
    "lint": "tslint -c tslint.json -p tsconfig.json",
    "lint:fix": "yarn lint --fix",
    "build": "yarn lint && yarn clean && tsc",
    "clean": "yarn clean:build",
    "clean:build": "rm -rf dist",
    "cli": "ts-node src/cli.ts",
    "ci": "yarn lint && npm test",
    "dev": "nodemon --watch 'src/**/*' -e ts --exec ts-node src/index.ts",
    "start": "node dist/index.js",
    "test": "NODE_ENV=test NODE_TEST=true jest",
    "coverage": "NODE_ENV=test NODE_TEST=true jest --coverage || true"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:ulises-jeremias/acme-bros-pictures.git"
  },
  "author": "Ulises Jeremias Cornejo Fandos <ulisescf.24@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "@koa/cors": "^2.2.3",
    "bcryptjs": "^2.4.3",
    "class-validator": "^0.9.1",
    "delay": "^4.3.0",
    "dotenv": "^6.2.0",
    "jsonwebtoken": "^8.5.1",
    "koa": "^2.11.0",
    "koa-bodyparser": "^4.2.1",
    "koa-compress": "^3.0.0",
    "koa-helmet": "^4.2.1",
    "koa-passport": "^4.1.3",
    "koa-response-time": "^2.1.0",
    "koa-router": "^7.4.0",
    "koa-session": "^5.13.1",
    "koa-static": "^5.0.0",
    "koa2-swagger-ui": "^2.15.4",
    "lodash": "^4.17.15",
    "node-input-validator": "^2.3.4",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "pg": "^7.14.0",
    "reflect-metadata": "^0.1.13",
    "swagger-jsdoc": "^3.5.0",
    "swagger-ui-koa": "latest",
    "typeorm": "^0.2.21",
    "underscore": "^1.9.2",
    "uuid": "^3.3.3",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@types/dotenv": "^6.1.1",
    "@types/jest": "^24.0.23",
    "@types/koa": "^2.11.0",
    "@types/koa-bodyparser": "^4.3.0",
    "@types/koa-compress": "^2.0.9",
    "@types/koa-helmet": "^3.1.2",
    "@types/koa-response-time": "^2.1.0",
    "@types/koa-router": "^7.0.42",
    "@types/koa__cors": "^2.2.3",
    "@types/lodash": "^4.14.149",
    "@types/node": "^10.17.6",
    "@types/passport": "^1.0.3",
    "@types/raven": "^2.5.3",
    "@types/supertest": "^2.0.8",
    "@types/swagger-jsdoc": "^3.0.2",
    "@types/uuid": "^3.4.6",
    "commander": "^4.1.1",
    "jest": "^23.6.0",
    "nodemon": "^1.19.4",
    "pre-commit": "^1.2.2",
    "shelljs": "^0.8.3",
    "supertest": "^3.4.2",
    "ts-jest": "^23.10.5",
    "ts-node": "^7.0.1",
    "tslint": "^5.20.1",
    "typescript": "^3.7.3"
  },
  "jest": {
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "transform": {
      "\\.ts$": "ts-jest"
    },
    "testRegex": "(/test/.*|(\\.|/)(test|spec))\\.(js|ts)x?$",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/",
      "/coverage/"
    ]
  },
  "pre-commit": [
    "lint",
    "test"
  ]
}
